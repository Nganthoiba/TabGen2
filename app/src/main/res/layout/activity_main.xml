<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:background="#e85c11"
    android:fillViewport="false">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#e85c11">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/welcome"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#e3e2e2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/email"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/welcome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp"
            android:textColor="#c1bebe" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/username"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/small_green_email_icon"
            android:background="@drawable/edittext_style"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/password"
            android:id="@+id/textView2"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#c1bebe" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:drawableLeft="@drawable/small_green_password_icon"
            android:background="@drawable/edittext_style"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- style="?android:attr/buttonStyleSmall" -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me  "
            android:id="@+id/rememberMe"
            android:checked="false"
            android:textColor="#c1bebe"
            android:layout_below="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#efa4b1"
        android:textColorHighlight="#fba336"
        android:textStyle="italic"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/forgotPassword"
        android:typeface="serif"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/signIn"
         />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/signIn"
        android:background="@drawable/button_background"
        android:textColor="#fcfafa"
        android:layout_below="@+id/password"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
</ScrollView>
